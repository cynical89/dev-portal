<div class="container">
	<div>
		<h1>Account Page</h1>
		<br>
		<div class="col-md-4 col-md-offset-4">
			<div class="thumbnail">
				{{#if user}}
					<img src={{user.avatarUrl}} alt="avatar for {{user.username}}">
					<div class="caption">
						<h4 class="text-center"><strong>{{user.username}}</strong></h4>
						<hr>
						<p class="text-center"><small><strong>Email: {{user.email}}</strong></small></p>
						{{#if user.admin}}
							<p class="text-center"><small><strong>Role: <i class="text-danger">{{user.role}}</i></strong></small></p>
						{{else}}
							<p class="text-center"><small><strong>Role: <i class="text-success">{{user.role}}</i></strong></small></p>
						{{/if}}
				{{/if}}
			</div>
		</div>
	</div>
</div><!-- /.container -->
