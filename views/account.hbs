<div class="container">
	<div>
		<h1>Account Page</h1>
		<br>
		<div class="col-md-4 col-md-offset-4">
			<div class="thumbnail">
				{{#if user}}
					<img src="{{user.avatarUrl}}" alt="avatar for {{user.username}}">
					<div class="caption">
						<h4>{{user.username}}</h4>
						<p>{{user.role}}</p>
				{{/if}}
				{{#if admin}}
					<img src={{admin.avatarUrl}} alt="avatar for {{admin.username}}">
					<div class="caption">
						<h4 class="text-center"><strong>{{admin.username}}</strong></h4>
						<hr>
						<p class="text-center"><small><strong>Email: {{admin.email}}</strong></small></p>
						<p class="text-center"><small><strong>Role: <i class="text-danger">{{admin.role}}</i></strong></small></p>
				{{/if}}
			</div>
		</div>
	</div>
</div><!-- /.container -->
