<div class="container">
<br><br>
	<div id="task-view">
		<div class="col-md-12">
				<div class="col-md-8">
					<h4 class="list-group-item-heading"><strong><u>{{task.title}}</u></strong></h4>
					<p class="list-group-item-text text-muted">
						<small><strong>Project: <i class="text-primary">{{task.project}}</strong></i></small>
					</p>
					<p class="list-group-item-text text-muted">
						<small><strong>Created At: <i class="text-success">{{task.created}}</strong></i></small>
					</p>
					<p class="list-group-item-text text-muted">
						<small><strong>Status: <i class="text-success">{{task.status}}</strong></i></small>
					</p>
					<p class="list-group-item-text text-muted">
						<small><strong>Role: <i class="text-success">{{task.role}}</strong></i></small>
					</p>
						<p class="list-group-item-text text-muted">
							<small><strong>Assigned to: <i class="text-success">{{task.assignedTo}}</strong></i></small>
						</p>
						<hr>
						<p class="list-group-item-text lead">
							{{task.description}}
						</p>
				</div>
				<div class="col-md-4">
					<button id="{{task.id}}" class="btn btn-sm btn-default">Request Task</button>
					{{#if user.admin}}
					<button id="rm:{{task.id}}" class="btn btn-sm btn-default">Delete Task</button>
					{{/if}}
				</div>
		</div>
	</div>
</div><!-- /.container -->
